--  REP Attacking (attacker is always #1)
    REP = 1
    CIS = 2
    --  These variables do not change
    ATT = 1
    DEF = 2



function ScriptPostLoad()
DisableSmallMapMiniMap()

--AllowAISpawn(1, false) --Both commands are for debug purposes
--AllowAISpawn(2, false)

SetAIDifficulty(10 , 10 )
   
    hunt = ObjectiveTDM:New{teamATT = 1, teamDEF = 2, pointsPerKillATT = 1, pointsPerKillDEF = 1, textATT = "", textDEF = "", multiplayerRules = true}
    
    hunt.OnStart = function(self)
    	AddAIGoal(ATT, "Deathmatch", 100)
    	AddAIGoal(DEF, "Deathmatch", 100)
    end
	
	
--CIS Landers

SetProperty("cis_escape_1", "MaxHealth", 1e+37)
SetProperty("cis_escape_1", "CurHealth", 1e+37)
SetProperty("cis_escape_2", "MaxHealth", 1e+37)
SetProperty("cis_escape_2", "CurHealth", 1e+37)
SetProperty("cis_escape_3", "MaxHealth", 1e+37)
SetProperty("cis_escape_3", "CurHealth", 1e+37)


--CIS Lander 1 Function START

   cis_lander_1 = CreateTimer("cis_lander_1")
   SetTimerValue(cis_lander_1, (20.0))
   ShowTimer(cis_lander_1)
	  
   cis_lander_1_10 = CreateTimer("cis_lander_1_10")
   SetTimerValue(cis_lander_1_10, (30.0))
   ShowTimer(cis_lander_1_10)
	  
   cis_lander_1_30 = CreateTimer("cis_lander_1_30")
   SetTimerValue(cis_lander_1_30, (70.0))
   ShowTimer(cis_lander_1_30)
   
   cis_lander_1_40 = CreateTimer("cis_lander_1_40")
   SetTimerValue(cis_lander_1_40, (75.0))
   --ShowTimer(nil)

--Start Timer 1 --Start Animation

StartTimer(cis_lander_1) --Instant Start
   OnTimerElapse(
function(timer)
PlayAnimation("cis_space_1")
--ShowTimer(nil)
--Start Timer 2 --Start Objective 10 Seconds after Animation starts 
--(Remember: Animation takes 45 seconds only: "10" Taking off, "30" Attacking time, "5" Escaping time (Nothing special about the last 5 seconds))
      DestroyTimer(timer)
                 end,
              cis_lander_1
              ) 
			  
StartTimer(cis_lander_1_10)
   OnTimerElapse(
function(timer)
--Set Health to 50000
SetProperty("cis_escape_1", "CurHealth", 50000)
SetProperty("cis_escape_1", "MaxHealth", 50000)
--Add marker to target
MapAddEntityMarker("cis_escape_1", "hud_objective_icon_circle", 8.0, ATT, "YELLOW", true, true, true)
MapAddEntityMarker("cis_escape_1", "hud_objective_icon_circle", 8.0, DEF, "YELLOW", true, true, true)
--Add AI goals
	ClearAIGoals(ATT)
	ClearAIGoals(DEF)
AddAIGoal(1, "Destroy", 80, cis_escape_1 )
AddAIGoal(2, "Defend", 80, cis_escape_1 )
AddAIGoal(ATT, "Deathmatch", 20)
AddAIGoal(DEF, "Deathmatch", 20)

OnObjectKill(
  function(object, killer)
	if GetEntityName(object) == "cis_escape_1" then
      AddTeamPoint(ATT, 50)
	ClearAIGoals(ATT)
	ClearAIGoals(DEF)
	ShowTimer(nil)
AddAIGoal(ATT, "Deathmatch", 100)
AddAIGoal(DEF, "Deathmatch", 100)
	 
	       DestroyTimer(timer)
                 end,
              cis_lander_1_40
			  
    end
  end
)

      DestroyTimer(timer)
                 end,
              cis_lander_1_10
              ) 
			  
			  
			  StartTimer(cis_lander_1_40)
   OnTimerElapse(
function(timer)

 AddTeamPoint(DEF, 50)
	ClearAIGoals(ATT)
	ClearAIGoals(DEF)
	ShowTimer(nil)
AddAIGoal(ATT, "Deathmatch", 100)
AddAIGoal(DEF, "Deathmatch", 100)

      DestroyTimer(timer)
                 end,
              cis_lander_1_40
              ) 
			  
--ShowTimer(nil)

--Start Timer 3 --Start AI objective stuff when the target is in air from Animation seconds 10 (Ground to Space) to 40 (Attacking time)

StartTimer(cis_lander_1_30)
   OnTimerElapse(
function(timer)
	ClearAIGoals(ATT)
	ClearAIGoals(DEF)
AddAIGoal(ATT, "Deathmatch", 100)
AddAIGoal(DEF, "Deathmatch", 100)
MapRemoveEntityMarker("cis_escape_1")

--ShowTimer(nil)

--If Attackers destroy their target add points to them. Otherwise if they fail to eliminate their target within 30 (+5) seconds the 
--defending team (Target Defender!!!) will earn their[TARGET Attackers] points instead.



			  
      DestroyTimer(timer)
                 end,
              cis_lander_1_30
              ) 
			  
--CIS Lander 1 Function END		  
			  
	
			

	hunt:Start()
    SetMapNorthAngle(180, 1)
	SetUberMode(1);
	
--	EnableFlyerPath(team1_fly,1)
--	EnableFlyerPath(team2_fly,1)
   
 end
 
 

